{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist/legacy",
      "lib": ["dom", "es5", "es6", "es2015.collection", "es2015.iterable", "es2015.promise"],
      "downlevelIteration": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "sourceMap": true
    },
    "include": [
      "src/**/*"
    ]
  }